.scroll-view-item{
  position: relative;
  display: flex;
  height: 50px;
  border-top: 1px solid #f3f3f3;
}

.scroll-view-item image:first-child{
  position: absolute;
  left: 5px;
  top: 5px;
}

.scroll-view-item image:last-child{
  position: absolute;
  right: 20px;
  top: 10px;
}

.scroll-view-item text{
  position: absolute;
  left: 100px;
  top: 10px;
}

.fangxiangView{
  margin-top: 20rpx;
  width: 24px;
  height: 24px;
  display: inline-block;
  background-color: #00b26a;
  border-radius: 50%;
}