page{
  height: 100%;
}

.main{
  position: relative;
  width: 100%;
  height: 100%;
}

.img{
  width: 100%;
  height: 500rpx;
}

.img_box{
  width: 750rpx
}

.name{
  position: relative;
  width: 100%;
  height: 60px;
  background-color: white;
  border-radius: 20px;
  border-bottom: #00b26a solid 2px;
}

.name image{
  position: absolute;
  right: 25px;
  top: 10px;
  width: 40px;
  height: 40px;
}

.name text{
  position: absolute;
  left: 20px;
  color: green;
  font-size: 35px;
  font-family:  monospace;
  margin-top: 10px;
}

.text_box{
  padding: 20px;
  background-color: #f0f0f0;
}